// frontend/src/api/sysAdminApi.js
import { sysApi } from './axios';

export async function listSysAdmins() {
  const res = await sysApi.get('/admins');
  return res.data;
}

export async function inviteSysAdmin({ email, displayName }) {
  const res = await sysApi.post('/admins/invite', { email, displayName });
  return res.data; // enth√§lt tempPassword (nur solange kein Mailer existiert)
}

export async function setSysAdminStatus(id, status) {
  const res = await sysApi.patch(`/admins/${encodeURIComponent(id)}/status`, { status });
  return res.data;
}

export async function revokeSysAdmin(id) {
  const res = await sysApi.patch(`/admins/${encodeURIComponent(id)}/revoke`);
  return res.data;
}

export async function deleteSysAdmin(id) {
  const res = await sysApi.delete(`/admins/${encodeURIComponent(id)}`);
  return res.data;
}
